PROGRAM BINOMIAL
INTEGER N, R
REAL Y
PRINT*, 'ENTER VALUE FOR N'
READ(*,*) N
PRINT*, 'ENTER VALUE FOR R'
READ(*,*) R

Y = BIN(N,R)
WRITE(*,*) Y

CONTAINS 
FUNCTION BIN(N,R)
INTEGER N, R,NFACT,NRFACT,RFACT
REAL BIN

DO I = 1,N 
  NFACT = NFACT*I
  END DO
P =N-R
DO I = 1,P
  NRFACT = NRFACT* I
  END DO
DO I = 1,R
  RFACT = RFACT*I
  END DO

  BIN = (NFACT/NRFACT)/RFACT
  END FUNCTION
  
  END PROGRAM